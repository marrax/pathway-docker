                        <section id="contact">
                        <div class="separator"></div><br/>
                        <div class="row-fluid">
                                <div class="span12 addspace">
                                        <h1>GET IN TOUCH</h1>
                                </div>
                        </div>
                        <div class="row-fluid" style="min-height:520px;">
                                <div class="span7">
                                        <div class="done">
                                                <div class="alert alert-success">
                                                        <button type="button" class="close" data-dismiss="alert">x</button>
                                                        <strong>Message sent successfully!</strong><br/>
                                                </div>
                                        </div>
				<fieldset>
                          <%= simple_form_for @message, :html => {:class => "form-horizontal"}, :url => contact_path do |form| %>
                          <%= form.input :name, :label => 'First Name: ', :placeholder => 'Your first name.', :input_html => {:class => "span6"}  %>
                          <%= form.input :email, :label => 'Email address: ', :placeholder => 'your email address.', :input_html => {:class => "span6"} %>
                          <%= form.input :body , :label => 'Enquiry: ', :as => :text, :placeholder => 'What you would like to contact us about.', :input_html => {:cols => 50, :rows =>5, :class => 'input-xlarge-focused span6 '} %>
                          </br>
                          <%= form.button :submit, :label => 'Send Enquiry',  :class =>  "btn btn-primary pull-right"  %>
                          <% end %>
                        </fieldset>

                                        </div>
